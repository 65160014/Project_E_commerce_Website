<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/path/to/your/custom.css">
    <title>Products</title>
</head>
<body>
    <%- include('partials/header') %>

    <h2>Search Results</h2>
    <form method="get" action="/products">
        <input type="hidden" name="search" value="<%= search %>">
        <label for="sort">Sort by: </label>
        <select name="sort" onchange="this.form.submit()">
            <option value="ProductName" <%= sort === 'ProductName' ? 'selected' : '' %>>Name</option>
            <option value="product_price" <%= sort === 'product_price' ? 'selected' : '' %>>Price</option>
        </select>
    </form>

    <div class="product-list">
        <% products.forEach(product => { %>
            <div class="product-item">
                <img src="<%= product.product_image %>" alt="<%= product.ProductName %>">
                <h3><%= product.ProductName %></h3>
                <p>Price: <%= product.product_price %> THB</p>
                <p><%= product.product_detail %></p>
                <a href="/product/<%= product.ProductID %>">View Details</a>
            </div>
        <% }); %>
    </div>

</body>
</html>