<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <link rel="stylesheet" href="/css/style_header.css">
    <link rel="stylesheet" href="/css/style_cart.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/path/to/your/custom.css">
</head>
<body>
    <%- include('partials/header') %>

    <h2>Your Cart</h2>

    <% if (products.length > 0) { %>
        <div class="cart-list">
            <% products.forEach(product => { %>
                <div class="cart-item">
                    <img src="/images/<%= product.product_image %>" alt="<%= product.ProductName %>">
                    <h3><%= product.ProductName %></h3>
                    <p>Price: <%= product.product_price %> THB</p>
                    
                    <form action="/remove-from-cart" method="post" style="display: inline;">
                        <input type="hidden" name="productID" value="<%= product.ProductID %>">
                        <button type="submit" style="background: none; border: none; cursor: pointer;">
                            <i class="fas fa-trash" style="color: red; font-size: 1.2em;"></i>
                        </button>
                    </form>                    
                    
                </div>
            <% }); %>
        </div>
        <div class="total-checkout">
            <h3>Total: <%= total %> THB</h3>
            <a href="/place_order"><button>Proceed to Checkout</button></a>
        </div>
               
    <% } else { %>
        <center><p>Your cart is empty.</p></center>
    <% } %>

</body>
</html>